<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Author</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        {% for comment in value %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.author.name }}</td>
                <td>{{ comment.content }}</td>
            </tr>
        {%  endfor %}
    </tbody>
</table>